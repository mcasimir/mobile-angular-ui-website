<ul class="list-unstyled">
  {{#each blogPages.items }}
    {{#each items}}
      <li>
        <article>
          <h3><a href="{{$path}}">{{title}}</a></h3>
          <p>
            <i>{{formatDate created_at}}</i> â€“ {{description}}
          </p>
          <p>
            <a class="btn btn-primary" href="{{$path}}">Read</a>
          </p>
          <br/>
        </article>
      </li>
    {{/each  }}
  {{/each  }}
