<ul class="pagination">
{{#each blogPages.items }}
  {{#ifCurrent $path }}
    <li class="active"><a href="{{$path}}">{{title}}</a></li>
  {{else}}
    <li><a href="{{$path}}">{{page}}</a></li>
  {{/ifCurrent}}
{{/each  }}
</ul>
